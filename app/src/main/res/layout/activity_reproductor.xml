<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F8FAFC"
    android:padding="20dp">

    <!-- Cabecera fija -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reproductor de entrevista"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:paddingBottom="12dp"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tarjeta principal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Imagen con bordes redondeados -->
                    <ImageView
                        android:id="@+id/ivImagen"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:background="#E2E8F0"
                        android:contentDescription="Imagen del entrevistado"
                        android:layout_marginBottom="20dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <!-- Información de la entrevista -->
                    <TextView
                        android:id="@+id/tvPeriodista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginBottom="6dp"
                        android:paddingStart="4dp" />

                    <TextView
                        android:id="@+id/tvFecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:layout_marginBottom="16dp"
                        android:paddingStart="4dp"
                        android:drawablePadding="8dp"
                        android:drawableStart="@android:drawable/ic_menu_month" />

                    <!-- Descripción -->
                    <TextView
                        android:id="@+id/tvDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#475569"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp"
                        android:padding="12dp"
                        android:background="#F1F5F9"
                        android:radius="8dp" />

                    <!-- Controles de reproducción -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F8FAFC"
                        android:padding="16dp"
                        android:radius="10dp">

                        <!-- Barra de progreso -->
                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:progressTint="#3B82F6"
                            android:thumbTint="#3B82F6"
                            android:progressBackgroundTint="#CBD5E1" />

                        <!-- Tiempos -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:id="@+id/tvTiempoActual"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="00:00"
                                android:textSize="13sp"
                                android:textColor="#475569"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDuracion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="00:00"
                                android:textSize="13sp"
                                android:textColor="#475569"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Botones de control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- Botón Reproducir -->
        <Button
            android:id="@+id/btnReproducir"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/ic_media_play"
            android:backgroundTint="#10B981"
            android:drawableStart="@drawable/ic_media_play"
            android:drawableTint="#FFFFFF"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="0dp"
            android:radius="28dp"
            android:text=""
            android:textColorLink="#D90000" />

        <!-- Botón Pausar -->
        <Button
            android:id="@+id/btnPausar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/ic_media_pause"
            android:backgroundTint="#F59E0B"
            android:drawableStart="@drawable/ic_media_pause"
            android:drawableTint="#FFFFFF"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="0dp"
            android:radius="28dp"
            android:text="" />

        <!-- Botón Detener -->
        <Button
            android:id="@+id/btnDetener"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/ic_media_previous"
            android:backgroundTint="#EF4444"
            android:drawableStart="@drawable/ic_media_previous"
            android:drawableTint="#FFFFFF"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="0dp"
            android:radius="28dp"
            android:text="" />

    </LinearLayout>
</LinearLayout>